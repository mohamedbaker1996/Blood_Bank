<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_100dp"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_marginBottom="@dimen/dim_8dp"
    android:background="@drawable/shape_donation">


        <ImageView
            android:id="@+id/item_notification_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dim_100dp"
            android:layout_marginEnd="20dp"

            android:src="@drawable/ic_notifications" />

    <TextView
        android:id="@+id/item_notification_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/item_notification_iv_icon"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dim_40dp"
        android:layout_toLeftOf="@+id/item_notification_iv_icon"
        android:paddingLeft="20dp"
        android:textSize="@dimen/dim_24dp"
        android:textColor="@color/colorDarkRed"
        />
    <TextView
        android:id="@+id/item_notification_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        />

</RelativeLayout>